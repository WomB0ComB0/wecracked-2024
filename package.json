  "scripts": {
    "dev": "bun run next dev",
    "devt": "bun run next dev --turbo",
    "build": "bun run next build",
    "start": "bun run next start",
    "analyze": "ANALYZE=true bun run next build",
    "lint": "bun run eslint && bun run prettier",
    "format": "bun run next lint --fix && bun run prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "postbuild": "bun run next-sitemap && bun run prisma generate",
    "postinstall": "bun run prisma generate",
    "lint:bun": "bunx biome check --apply ./ || true && bunx stylelint src/styles/**/*.{css,scss,sass} --fix"
  },
