{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": ["node_modules/**/*", "dist/**/*", "build/**/*", ".next/**/*", "public/**/*.js"]
  },
  "formatter": {
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 100,
    "ignore": [
      "pnpm-lock.yaml",
      "package.json",
      "tsconfig.json",
      "yarn.lock",
      "yarn-debug.log",
      "yarn-error.log",
      "package-lock.json"
    ]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "es5",
      "quoteStyle": "single",
      "semicolons": "always"
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    },
    "formatter": {
      "indentStyle": "space",
      "trailingCommas": "none"
    }
  }
}
